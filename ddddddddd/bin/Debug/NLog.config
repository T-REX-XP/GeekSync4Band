<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <target name="TcpOutlet" xsi:type="NLogViewer" address="tcp://127.0.0.1:4505"/>
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="TcpOutlet" />
    <logger name="*" minlevel="Error" writeTo="TcpOutlet" />
    <logger name="*" minlevel="Debug" writeTo="TcpOutlet" />
    <logger name="*" minlevel="Trace" writeTo="TcpOutlet" />
    <logger name="*" minlevel="Fatal" writeTo="TcpOutlet" />


  </rules>
</nlog>